# -------------------------------------------------------------
# StitchTracker Environment Template
# Copy this to .env.test or .env.public depending on your use.
# -------------------------------------------------------------

# Django settings
DJANGO_SETTINGS_MODULE=stitchtracker_backend.settings.prod
SECRET_KEY=replace-me
DEBUG=1
ENABLE_HTTPS=0

# Host / network configuration
# For test or local networks, "*" works fine
ALLOWED_HOSTS=*,localhost,127.0.0.1,192.168.1.90
CSRF_TRUSTED_ORIGINS=http://localhost:8082,http://127.0.0.1:8082,http://192.168.1.90:8082

# -------------------------------------------------------------
# Database (Postgres container + Django backend)
# -------------------------------------------------------------
DB_NAME=stitchtracker
DB_USER=stitch
DB_PASSWORD=stitchpw
DB_HOST=db
DB_PORT=5432

POSTGRES_DB=stitchtracker
POSTGRES_USER=stitch
POSTGRES_PASSWORD=stitchpw

# -------------------------------------------------------------
# Optional (uncomment if you add email, external API, etc)
# -------------------------------------------------------------
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=username
# EMAIL_HOST_PASSWORD=password

# -------------------------------------------------------------
# Usage
# -------------------------------------------------------------
# For testing:  cp .env.example .env.test
# For stable:   cp .env.example .env.public
# docker compose --env-file .env.test up -d --build
# docker compose --env-file .env.public up -d --build
# -------------------------------------------------------------

